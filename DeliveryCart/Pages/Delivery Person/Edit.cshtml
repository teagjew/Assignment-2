@page
@model Assignment_2.Pages.DeliveryPerson.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Change Order Status</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Order.Status" class="control-label"></label>
                <select asp-for="UpdatedStatus" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="In Transit">In Transit</option>
                    <option value="Delivered">Delivered</option>
                </select>
                <span asp-validation-for="Order.Status" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group"> 
                <input type="hidden" asp-for="OrderToUpdate" value="@Model.Order.OrderID">
                <input type="submit" asp-page-handler="UpdateStatus" asp-route-id="@Model.Order.OrderID" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-page="./Index">Back to Orders</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

